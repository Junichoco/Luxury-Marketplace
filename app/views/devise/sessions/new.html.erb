<div class="d-flex justify-content-center align-items-center vh-100 bg-dark">
  <div class="form-signin w-100" style="max-width: 400px;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <h1 class="h3 mb-3 fw-normal text-center text-white">Log in</h1>
        <div class="form-floating mb-3">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control text-white bg-secondary border-secondary" } %>
        </div>
        <div class="form-floating mb-3">
          <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control text-white bg-secondary border-secondary" } %>
        </div>
        <div class="form-floating mb-3">
          <%= f.input :remember_me, as: :boolean, input_html: { class: "text-black" } if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "w-100 btn btn-lg btn-primary"%>
      </div>
    <% end %>
    <div class="mt-5 mb-3 text-center text-white-50">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
