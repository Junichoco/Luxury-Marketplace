<%# dynamic javascript codes for review %>

  <div data-controller="reviews">
    <div class="review-form border-bottom border-dark-subtle py-3">
      <h2>Review</h2>
      <button data-action="click->reviews#toggle" class="btn btn-info my-4 mx-2">Add Review</button>
      <div class="d-none" data-reviews-target="form">
        <%= render 'review/form', review: @review %>
      </div>
    </div>
    <div class="reviews border-bottom border-dark-subtle py-3">
      <% @product.reviews.each do |review| %>
          <%= render 'review/review', review: review %>
        <% end %>
    </div>
  </div>
</div>

