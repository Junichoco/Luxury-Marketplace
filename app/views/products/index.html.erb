<!--The cards should be same sizes-->
<div class="container">
  <div class="product-cards row">
    <% if @products.empty? %>
      <p>No products matched your search</p>
    <% else %>
      <% @products.each do |product| %>
        <div class="col-3">
          <div class="card m-3 ms-3 product-card">
            <% if product.photos.attached? %>
              <%= cl_image_tag product.photos.first.key, crop: :fill %>
            <% else %>
              <%= image_tag 'default_product_img.jpg', alt: "default image for list"%>
            <% end %>
            <div class="card-produc">
              <%= link_to "Show this product", product_path(product), class: "btn btn-outline-info", role: "button" %>
              <div class="card-product-infos">
                <div>
                  <h3 class="card-title"><%= product.title %></h3>
                </div>
                <div>
                  <h3 class="card-product-cat"> <%= product.category %></h3>
                </div>

                <h3 class="card-product-pricing">DAY/Â¥<%= product.price %></h3>
                <%= image_tag product.user.photo, class: "card-product-user avatar-bordered" if product.user.photo.attached? %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
