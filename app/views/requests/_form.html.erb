<%= simple_form_for [@product, @renting_request],
    html: { data: {
      insert_in_list_target: "form",
      action: "submit->insert-in-list#send"
    } } do |f| %>
  <a class="">Choose your dates<%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } }, label: false %></a>
  <div class="text-end"> <!-- Aligns content to the right -->
    <%= f.submit 'Submit', class: "btn btn-info my-3 my-4 " %>
    <div class="bg-rental-color border-top">
      <div class="ownercard">
        <%= image_tag @product.user.photo, class: "imageownercard card-product-user avatar-bordered" if @product.user.photo.attached? %>
      </div>
      <div class="m-3">⭐️ Verified user</div>
      <div class="m-3"><%= @product.user.name %></div>
      <div class="m-3"><%= @product.user.email %></li>
    </div>
  </div>
<% end %>
