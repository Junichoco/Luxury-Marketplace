<div class="container product-container">
  <h1>All Requests</h1>
  <% @renting_requests.each do |renting_request| %>
    <div class="card">
      <div class="card-body">
        <% product = renting_request.product %>
        <%= product.title %>
        <%= renting_request.start_date %>
        <%= renting_request.end_date %>
        <%= renting_request.status %>
        <%= renting_request.total_price.to_i %>
      </div>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body row">
      <h4><%= product.title %></h4>
      <div class="col-3 product-thumbnail">
        <%= image_tag 'default_product_img.jpg', alt: "default image for product", class: "product-thumbnail-img" %>
      </div>
      <div class="col-9">
        <p><%= renting_request.status %></p>
        <div class="row">
          <div class="col-6">
            <p><%= product.description %></p>
          </div>
          <div class="col-6">
            <p>adkoewp </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
